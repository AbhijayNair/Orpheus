        <changelogtext>Add album and artist info to casting</changelogtext>
    </changelogversion>

    <changelogversion versionName="0.1.1">
        <changelogtext>Address a couple crashes.</changelogtext>
    </changelogversion>

    <changelogversion versionName="0.1.0">
