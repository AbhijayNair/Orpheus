<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opensilk.music.widgets.ProfileHeaderLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <!-- Album title / artist -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_marginLeft="96dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/info_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearancePanelHeader.Title"/>

            <TextView
                android:id="@+id/info_subtitle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearancePanelHeader.SubTitle"/>


        </LinearLayout>

        <org.opensilk.music.widgets.HeaderOverflowButton
            android:id="@+id/profile_header_overflow"
            android:gravity="right"
            style="@style/Orpheus.MenuButton"
            android:contentDescription="@null" />

    </org.opensilk.music.widgets.ProfileHeaderLayout>

    <org.opensilk.music.widgets.ThumbnailArtworkImageView
        android:id="@+id/album_image_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>