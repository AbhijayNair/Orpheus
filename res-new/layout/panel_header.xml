<org.opensilk.music.widgets.PanelHeaderLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mediarouter="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/panel_header_height"
    android:layout_gravity="top"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- album art thumb -->
        <!--<org.opensilk.music.widgets.ThumbnailArtworkImageView-->
            <!--android:id="@+id/header_album_art"-->
            <!--android:layout_width="@dimen/panel_header_thumbnail_size"-->
            <!--android:layout_height="@dimen/panel_header_thumbnail_size"-->
            <!--android:layout_margin="@dimen/panel_header_thumbnail_margin"-->
            <!--style="@style/Orpheus.Thumbnail"-->
            <!--android:contentDescription="@null"/>-->

        <!-- Track title / artist
        this is the anchor for sliding -->
        <LinearLayout
            android:id="@+id/track_artist_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/header_track_info"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearancePanelHeader.Title"
                android:background="@color/transparent"
                style="@style/SingleLineTextView"/>

            <TextView
                android:id="@+id/header_artist_info"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/transparent"
                android:textAppearance="@style/TextAppearancePanelHeader.SubTitle"
                style="@style/SingleLineTextView"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/header_menu_bar"
            android:animateLayoutChanges="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/header_closed_button_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <org.opensilk.music.widgets.RepeatingImageButton
                    android:id="@+id/header_action_button_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Orpheus.MenuButton"
                    android:contentDescription="@string/accessibility_prev"/>

                <org.opensilk.music.widgets.PlayPauseButton
                    android:id="@+id/header_action_button_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Orpheus.MenuButton"
                    android:contentDescription="@string/accessibility_play"/>

                <org.opensilk.music.widgets.RepeatingImageButton
                    android:id="@+id/header_action_button_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Orpheus.MenuButton"
                    android:contentDescription="@string/accessibility_next"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/header_open_button_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!--<android.support.v7.app.MediaRouteButton-->
                    <!--style="@style/Orpheus.MenuButton.MediaRouter"-->
                    <!--mediarouter:actionProviderClass="android.support.v7.app.MediaRouteActionProvider"-->
                    <!--android:id="@+id/panel_mediarouter"/>-->

                <org.opensilk.music.widgets.QueueButton
                    android:id="@+id/header_switch_queue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Orpheus.MenuButton"
                    android:contentDescription="@null"/>

                <org.opensilk.music.widgets.HeaderOverflowButton
                    android:id="@+id/header_overflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Orpheus.MenuButton"
                    android:contentDescription="@null" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</org.opensilk.music.widgets.PanelHeaderLayout>