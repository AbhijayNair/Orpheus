<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opensilk.music.ui2.main.FloatingActionContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="?colorPrimary"/>

            <org.opensilk.music.ui2.main.MainView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <org.opensilk.music.widgets.SquareThumbnailArtworkImageView
                    android:id="@+id/now_playing_thumbnail"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"/>

                <ProgressBar
                    android:id="@+id/now_playing_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/now_playing_thumbnail"
                    android:layout_toRightOf="@id/now_playing_thumbnail"
                    android:layout_marginTop="-6dp"
                    style="?android:progressBarStyleHorizontal"
                    android:max="1000"/>

                <TextView
                    android:id="@+id/now_playing_track"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/now_playing_thumbnail"
                    android:layout_toRightOf="@id/now_playing_thumbnail"
                    android:layout_below="@id/now_playing_progress"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    tools:text="Track Title"
                    android:textAppearance="@style/TextAppearancePanelHeader.Title"
                    style="@style/SingleLineTextView"/>

                <TextView
                    android:id="@+id/now_playing_artist"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/now_playing_thumbnail"
                    android:layout_toRightOf="@id/now_playing_thumbnail"
                    android:layout_below="@id/now_playing_track"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    tools:text="Artist Name"
                    android:textAppearance="@style/TextAppearancePanelHeader.SubTitle"
                    style="@style/SingleLineTextView"/>

            </RelativeLayout>

        </LinearLayout>

        <include layout="@layout/floating_action_buttons"/>


    </org.opensilk.music.ui2.main.FloatingActionContainer>

    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <LinearLayout
        android:id="@+id/drawer_container"
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        android:layout_gravity="start"
        android:paddingTop="?actionBarSize">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/orpheus_logo_record"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>