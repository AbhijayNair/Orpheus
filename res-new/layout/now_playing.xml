<org.opensilk.music.ui2.nowplaying.NowPlayingView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/now_playing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        style="?toolbarTheme"/>

    <LinearLayout
        android:id="@+id/now_playing_actions"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageButton
            android:id="@+id/now_playing_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:src="@drawable/ic_repeat_white_36dp"
            style="?nowPlayingRepeatStyle"/>

        <ImageButton
            android:id="@+id/now_playing_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:src="@drawable/ic_skip_previous_white_36dp"
            style="?nowPlayingPrevStyle"/>

        <org.opensilk.common.widget.ImageButtonCheckable
            android:id="@+id/now_playing_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:src="@drawable/ic_play_arrow_white_36dp"
            style="?nowPlayingPlayStyle"/>

        <ImageButton
            android:id="@+id/now_playing_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:src="@drawable/ic_skip_next_white_36dp"
            style="?nowPlayingNextStyle"/>

        <ImageButton
            android:id="@+id/now_playing_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:src="@drawable/ic_shuffle_white_36dp"
            style="?nowPlayingShuffleStyle"/>

    </LinearLayout>

    <org.opensilk.common.widget.AnimatedImageView
        android:id="@+id/now_playing_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/now_playing_toolbar"
        android:layout_above="@id/now_playing_actions"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/default_artwork"/>

    <!-- Our scrubber height is 32dp making the seekbar view
    32dp so as a hack to get the bar to sit on the edge
    of the footer we set a negative bottom margin -->
    <org.opensilk.common.widget.CompatSeekBar
        android:id="@+id/now_playing_seekprogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_above="@id/now_playing_actions"
        android:layout_marginBottom="-16dp"
        android:padding="0dp"
        android:max="1000"
        tools:progress="200"/>

    <!-- current playtime -->
    <TextView
        android:id="@+id/now_playing_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/now_playing_seekprogress"
        android:layout_alignParentLeft="true"
        android:gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:textAppearance="?android:textAppearanceSmall"
        style="@style/NowPlayingTicker"
        tools:text="0:00"/>

    <!-- total playtime -->
    <TextView
        android:id="@+id/now_playing_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/now_playing_seekprogress"
        android:gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:textAppearance="?android:textAppearanceSmall"
        style="@style/NowPlayingTicker"
        tools:text="0:00"/>

</org.opensilk.music.ui2.nowplaying.NowPlayingView>