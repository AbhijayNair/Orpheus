<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Card visible layout -->
    <LinearLayout
        android:id="@+id/card_main_layout"
        android:orientation="horizontal"
        style="@style/card.main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/card_thumbnail_image"
            android:layout_width="@dimen/list_card_thumbnail"
            android:layout_height="@dimen/list_card_thumbnail"
            android:layout_margin="4dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:scaleType="centerInside"
            android:contentDescription="@string/accessibility_shuffle_all"
            />

        <!-- Main Content View -->
        <FrameLayout
            android:id="@+id/card_main_content_layout"
            style="@style/Orpheus.card.content_outer_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <!-- Compound view for Shadow
         If you want to customize this element use attr card:card_shadow_layout_resourceID -->
    <it.gmariotti.cardslib.library.view.component.CardShadowView
        style="@style/card.shadow_outer_layout"
        android:id="@+id/card_shadow_layout"
        card:card_shadow_layout_resourceID="@layout/card_shadow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>