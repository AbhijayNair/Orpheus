<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccc"
    android:paddingTop="?actionBarSize">
    <!-- need padding for actionbaroverlay not using margin so
    drawer takes full height when panel is open-->

    <TextView
        android:text="@string/drawer_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/navigation_drawer_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        tools:context="org.opensilk.music.ui.fragments.NavigationDrawerFragment" />

</LinearLayout>




