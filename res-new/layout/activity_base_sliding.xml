<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:collapsedHeight="@dimen/panel_header_height"
    sothree:shadowHeight="@dimen/shadow_height">

    <!-- main content -->
    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Sliding content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="false"
        android:background="?android:colorBackground">

        <!--album art background -->
        <ImageView
            android:id="@+id/panel_background_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"/>

        <!-- header -->
        <include layout="@layout/panel_header"
            android:id="@+id/panel_header"/>

        <!-- footer -->
        <include layout="@layout/panel_footer"
            android:id="@+id/panel_footer"/>

        <!-- Used to show/hide the QueueFragment -->
        <FrameLayout
            android:id="@+id/panel_middle_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/panel_header"
            android:layout_above="@id/panel_footer"/>

        <!-- header shadow -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/shadow_height"
            android:layout_below="@id/panel_header"
            android:contentDescription="@null"
            android:src="@drawable/top_shadow" />

        <!-- footer shadow -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/shadow_height"
            android:layout_above="@id/panel_footer"
            android:contentDescription="@null"
            android:src="@drawable/bottom_shadow" />

        <!-- Our scrubber height is 32dp making the seekbar view
             32dp so as a hack to get the bar to sit on the edge
             of the footer we set a negative bottom margin -->
        <SeekBar
            android:id="@android:id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/panel_footer"
            android:layout_marginBottom="-16dp"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:max="1000" />

        <!-- current playtime -->
        <TextView
            android:id="@+id/footer_player_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@android:id/progress"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:textAppearance="@style/TextAppearancePlayTime"/>

        <!-- total playtime -->
        <TextView
            android:id="@+id/footer_player_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@android:id/progress"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:paddingRight="16dp"
            android:textAppearance="@style/TextAppearancePlayTime"/>

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>