<org.opensilk.music.widgets.PanelFooterLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="24dp"
    android:gravity="center"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true">
    <!--^^Extra top padding here to compensate for 16dp overhang of seekbar-->

    <org.opensilk.music.widgets.ShuffleButton
        android:id="@+id/footer_action_button_shuffle"
        style="@style/PlaybackControlButton"
        android:contentDescription="@string/accessibility_shuffle" />

    <org.opensilk.music.widgets.RepeatingImageButton
        android:id="@+id/footer_action_button_previous"
        style="@style/PlaybackControlButton"
        android:contentDescription="@string/accessibility_prev"/>

    <org.opensilk.music.widgets.PlayPauseButton
        android:id="@+id/footer_action_button_play"
        style="@style/PlaybackControlButton"
        android:contentDescription="@string/accessibility_play"/>

    <org.opensilk.music.widgets.RepeatingImageButton
        android:id="@+id/footer_action_button_next"
        style="@style/PlaybackControlButton"
        android:contentDescription="@string/accessibility_next"/>

    <org.opensilk.music.widgets.RepeatButton
        android:id="@+id/footer_action_button_repeat"
        style="@style/PlaybackControlButton"
        android:contentDescription="@string/accessibility_repeat" />

</org.opensilk.music.widgets.PanelFooterLayout>