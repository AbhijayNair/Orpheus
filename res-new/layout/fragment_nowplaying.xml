            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_action_playback_next_black"
            style="@style/PlaybackControlButton"/>

        <ImageButton
            android:id="@+id/footer_action_button_repeat"
            android:contentDescription="@string/accessibility_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_action_playback_repeat_black"
            style="@style/PlaybackControlButton"/>

    </LinearLayout>

    <!-- Used to show/hide the QueueFragment -->
    <FrameLayout
        android:id="@+id/panel_middle_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/panel_header"
        android:layout_above="@id/panel_footer"/>

    <!-- Our scrubber height is 32dp making the seekbar view
         32dp so as a hack to get the bar to sit on the edge
         of the footer we set a negative bottom margin -->
    <org.opensilk.common.widget.CompatSeekBar
        android:id="@+id/footer_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/panel_footer"
        android:layout_marginBottom="-16dp"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:max="1000" />

    <!-- current playtime -->
    <TextView
        android:id="@+id/footer_player_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer_progress_bar"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:paddingLeft="16dp"
        android:textAppearance="@style/TextAppearancePlayTime"/>

    <!-- total playtime -->
    <TextView
        android:id="@+id/footer_player_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer_progress_bar"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingRight="16dp"
        android:textAppearance="@style/TextAppearancePlayTime"/>

