    <!-- footer -->
    <LinearLayout
        android:id="@+id/panel_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="24dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">
        <!--^^Extra top padding here to compensate for 16dp overhang of seekbar-->

        <ImageButton
            android:id="@+id/footer_action_button_shuffle"
            android:contentDescription="@string/accessibility_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_action_playback_shuffle_black"
            style="?buttonBarButtonStyle"/>

        <ImageButton
            android:id="@+id/footer_action_button_previous"
            android:contentDescription="@string/accessibility_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_action_playback_prev_black"
            style="@style/PlaybackControlButton"/>

        <ImageButton
            android:id="@+id/footer_action_button_play"
            android:contentDescription="@string/accessibility_play"
