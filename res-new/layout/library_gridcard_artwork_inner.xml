<org.opensilk.music.widgets.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:selectableItemBackground">

    <org.opensilk.music.widgets.SquareThumbnailArtworkImageView
        android:id="@+id/artwork_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Orpheus.Thumbnail"/>

    <LinearLayout
        android:id="@+id/griditem_desc_overlay"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?colorAccent"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:minHeight="48dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_title"
                android:textAppearance="@style/TextAppearanceGrid.Title"
                style="@style/SingleLineTextView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_subtitle"
                android:textAppearance="@style/TextAppearanceGrid"
                style="@style/SingleLineTextView"/>

        </LinearLayout>

        <org.opensilk.music.widgets.CardOverflowButton
            android:id="@+id/card_overflow_button"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            style="@style/Orpheus.MenuButton"
            android:contentDescription="@null" />

    </LinearLayout>

</org.opensilk.music.widgets.SquareFrameLayout>