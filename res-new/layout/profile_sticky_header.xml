<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sticky_header_container"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <View
        android:id="@+id/dummy"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sticky_header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_sticky_header_height">

        <!-- Album title / artist -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/info_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearanceProfileHeader.Title"/>

            <TextView
                android:id="@+id/info_subtitle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearanceProfileHeader.SubTitle"/>


        </LinearLayout>

        <ImageButton
            android:id="@+id/profile_header_overflow"
            style="@style/Orpheus.MenuButton"
            android:src="@drawable/ic_menu_overflow_card_holo_dark"
            android:contentDescription="@null" />

    </LinearLayout>

</LinearLayout>