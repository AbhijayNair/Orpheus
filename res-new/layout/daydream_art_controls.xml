<org.opensilk.music.dream.views.ArtWithControls
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SingleLineTextView"
        android:textAppearance="@style/TextAppearanceList.Title"/>

    <org.opensilk.music.widgets.FullScreenArtworkImageView
        android:id="@+id/album_art"
        android:layout_below="@id/track_title"
        android:layout_width="@dimen/dream_art_size"
        android:layout_height="@dimen/dream_art_size" />

    <LinearLayout
        android:layout_below="@id/album_art"
        android:layout_width="@dimen/dream_art_size"
        android:layout_height="wrap_content">

        <org.opensilk.music.widgets.RepeatingImageButton
            android:id="@+id/footer_action_button_previous"
            style="@style/PlaybackControlButton"
            android:contentDescription="@string/accessibility_prev"/>

        <org.opensilk.music.widgets.PlayPauseButton
            android:id="@+id/footer_action_button_play"
            style="@style/PlaybackControlButton"
            android:contentDescription="@string/accessibility_play"/>

        <org.opensilk.music.widgets.RepeatingImageButton
            android:id="@+id/footer_action_button_next"
            style="@style/PlaybackControlButton"
            android:contentDescription="@string/accessibility_next"/>

    </LinearLayout>

</org.opensilk.music.dream.views.ArtWithControls>