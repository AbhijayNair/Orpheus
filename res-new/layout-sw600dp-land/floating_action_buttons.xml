<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <org.opensilk.common.widget.FloatingActionButtonCheckable
        android:id="@+id/floating_action_button"
        android:layout_width="@dimen/fab_size_normal"
        android:layout_height="@dimen/fab_size_normal"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="?fabPlayStyle"/>

    <org.opensilk.common.widget.FloatingActionButton
        android:id="@+id/floating_action_next"
        android:layout_width="@dimen/fab_size_normal"
        android:layout_height="@dimen/fab_size_normal"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/floating_action_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="?fabNextStyle"/>

    <org.opensilk.common.widget.FloatingActionButton
        android:id="@+id/floating_action_prev"
        android:layout_width="@dimen/fab_size_normal"
        android:layout_height="@dimen/fab_size_normal"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/floating_action_next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="?fabPrevStyle"/>

    <org.opensilk.common.widget.FloatingActionButton
        android:id="@+id/floating_action_shuffle"
        android:layout_width="@dimen/fab_size_normal"
        android:layout_height="@dimen/fab_size_normal"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/floating_action_prev"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="?fabShuffleStyle"/>

    <org.opensilk.common.widget.FloatingActionButton
        android:id="@+id/floating_action_repeat"
        android:layout_width="@dimen/fab_size_normal"
        android:layout_height="@dimen/fab_size_normal"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/floating_action_shuffle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="?fabRepeatStyle"/>


</merge>