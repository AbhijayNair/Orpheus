<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/ActionBarOverlayTopMarginOuter">
    <!--^^^using ActionBarOverlay so need margin equal to height of actionBar-->

    <!-- main content -->
    <FrameLayout
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <!-- Sliding panel -->
        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            android:id="@+id/sliding_layout"
            android:layout_height="match_parent"
            android:layout_width="@dimen/panel_width"
            android:gravity="bottom"
            sothree:collapsedHeight="@dimen/panel_header_height"
            sothree:shadowHeight="@dimen/shadow_height">

            <!-- dummy content -->
            <FrameLayout
                android:id="@+id/landscape_dummy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <!-- Sliding content -->
            <fragment
                android:id="@+id/now_playing_fragment"
                android:name="org.opensilk.music.ui.fragments.NowPlayingFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.sothree.slidinguppanel.SlidingUpPanelLayout>

        <org.opensilk.music.widgets.ShadowView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            app:shadowPosition="right"/>

    </FrameLayout>
</LinearLayout>