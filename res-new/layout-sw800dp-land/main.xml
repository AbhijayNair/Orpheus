<org.opensilk.music.ui2.main.MainView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        style="?toolbarTheme"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_below="@id/main_toolbar"
        android:background="?colorPrimary"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_toolbar"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        app:cardBackgroundColor="?android:colorBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.opensilk.music.ui2.main2.FrameScreenSwitcherView
                android:id="@+id/main"
                android:layout_width="@dimen/main_content_width"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <include layout="@layout/footer"
                android:id="@+id/footer_view"
                android:layout_height="64dp"
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/main"
                android:layout_toRightOf="@id/main"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

            <include layout="@layout/queue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/main"
                android:layout_toRightOf="@id/main"
                android:layout_above="@id/footer_view"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--Fabs-->
    <include layout="@layout/floating_action_buttons"/>

</org.opensilk.music.ui2.main.MainView>