<resources>

    <!-- Base Theme common to all activities -->
    <style name="Orpheus.Theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Orpheus.Widget.ActionBar</item>
        <!-- holo.light has dark overflow button, we want a light overflow button for holo_orange-->
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
        <!--<item name="android:colorFocusedHighlight">@color/app_color</item>-->
    </style>

    <!-- Activities with panel needs ActionBarOverlay -->
    <style name="Orpheus.Theme.Panel">
        <!--needed to allow sliding up pane-->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- Action Bar Global-->
    <style name="Orpheus.Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/app_color</item>
    </style>

    <!-- Seekbar for now playing -->
    <style name="ProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_orpheus</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
    </style>

    <style name="HeaderButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FooterButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Orpheus.FastScroll" parent="@android:style/Widget.AbsListView">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
    </style>

    <style name="Orpheus.FastScroll.Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Orpheus.FastScroll.Card.GridView">
        <item name="android:columnWidth">@dimen/card_grid_columnwidth</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">@dimen/card_grid_vertical_spacing</item>
        <item name="android:horizontalSpacing">@dimen/card_grid_horizontal_spacing</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Orpheus.FastScroll.Card.ListView">

        <item name="android:layout_marginLeft">@dimen/card_list_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_list_margin_right</item>
        <item name="android:layout_marginTop">@dimen/card_list_margin_top</item>
    </style>

    <style name="Orpheus.FastScroll.Card.ListView.DragSort">
        <!-- header / footer overlay view so need to push out past them -->
        <item name="android:layout_marginBottom">@dimen/panel_footer_height</item>
        <item name="android:layout_marginTop">@dimen/panel_header_height</item>
        <!-- add some padding so the first/last items dont sit right on the header/footer-->
        <item name="android:paddingBottom">@dimen/card_list_dragsort_padding_bottom</item>
        <item name="android:paddingTop">@dimen/card_list_dragsort_padding_top</item>
        <!-- Setup dragsort options-->
        <item name="use_default_controller">true</item>
        <item name="drag_handle_id">@id/card_thumbnail_image</item>
        <item name="remove_enabled">true</item>
        <item name="remove_mode">flingRemove</item>
        <item name="fling_handle_id">@id/card_main_content_layout</item>
        <item name="float_background_color">@android:color/transparent</item>
        <!-- since we arent using the CardListView we need to disable dividers ourselves-->
        <item name="android:dividerHeight">0dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:divider">@null</item>
    </style>

</resources>