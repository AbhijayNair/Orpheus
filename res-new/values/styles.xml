<resources>

    <style name="Orpheus">
        <!--namespace-->
    </style>

    <!-- push down main content area to compensate for ActionBarOverlay-->
    <style name="Orpheus.ActionBarOverlay">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>

    <style name="Orpheus.Button" parent="@android:style/Widget.Holo.Button.Borderless">

    </style>

    <!-- default style for all card grids -->
    <style name="GridView.Orpheus.Card" parent="@android:style/Widget.Holo.Light.GridView">
        <!--fastscroll-->
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <!--dimens-->
        <item name="android:columnWidth">@dimen/card_grid_columnwidth</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">@dimen/card_grid_vertical_spacing</item>
        <item name="android:horizontalSpacing">@dimen/card_grid_horizontal_spacing</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- default style for all card lists -->
    <style name="ListView.Orpheus.Card" parent="@android:style/Widget.Holo.Light.ListView">
        <!--fastscroll-->
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
    </style>

    <!-- setup for the queue's dragsort list -->
    <style name="DragSort.Orpheus.Card" parent="@android:style/Widget.Holo.Light.ListView">
        <!-- header / footer overlay view so need to push out past them -->
        <item name="android:layout_marginBottom">@dimen/panel_footer_height</item>
        <item name="android:layout_marginTop">@dimen/panel_header_height</item>
        <!-- add some padding so the first/last items dont sit right on the header/footer-->
        <item name="android:paddingBottom">@dimen/card_list_dragsort_padding_bottom</item>
        <item name="android:paddingTop">@dimen/card_list_dragsort_padding_top</item>
        <!-- Setup dragsort options-->
        <item name="use_default_controller">true</item>
        <item name="drag_handle_id">@id/card_thumbnail_image</item>
        <item name="remove_enabled">true</item>
        <item name="remove_mode">flingRemove</item>
        <item name="drag_start_mode">onMove</item>
        <item name="fling_handle_id">@id/card_thumbnail_image</item>
        <item name="float_background_color">@android:color/transparent</item>
        <!-- since we arent using the CardListView we need to disable dividers ourselves-->
        <item name="android:dividerHeight">0dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Orpheus.PagerTabStrip">
        <!--<item name="android:textSize">@dimen/text_size_micro</item>-->
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">@color/tabstrip_background</item>
    </style>

    <style name="Orpheus.Thumbnail">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Orpheus.Thumbnail.GridCard">
        <item name="android:layout_width">@dimen/card_grid_cardwidth</item>
        <item name="android:layout_height">@dimen/card_grid_thumbheight</item>
    </style>

    <style name="Orpheus.Thumbnail.PanelHeader">
        <item name="android:layout_width">@dimen/panel_header_album_art_size</item>
        <item name="android:layout_height">@dimen/panel_header_album_art_size</item>
    </style>

    <style name="Orpheus.Thumbnail.ListCard">
        <item name="android:layout_width">@dimen/card_list_thumbnail_size</item>
        <item name="android:layout_height">@dimen/card_list_thumbnail_size</item>
    </style>

    <!-- List item text appearance -->

    <style name="TextAppearanceList.Title" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceList.SubTitle" parent="@android:style/TextAppearance.Holo.Small">

    </style>

    <!-- Grid item text appearance -->

    <style name="TextAppearanceGrid" parent="@android:style/TextAppearance.Holo.Small">

    </style>

    <style name="TextAppearanceGrid.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- text views for lists and grids -->

    <style name="SingleLineTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!--PANEL HEADER-->

    <style name="Orpheus.PanelHeader">
        <!--push the thumbnail over-->
        <item name="android:paddingLeft">@dimen/panel_header_padding_left</item>
        <!--push the queue button over-->
        <item name="android:paddingRight">@dimen/panel_header_padding_right</item>
        <!--default closed bg this is overrode when panel opens to @color/app_background_light_transparent-->
        <item name="android:background">@color/app_background_light</item>
    </style>

    <style name="TextAppearancePanelHeader.Title" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearancePanelHeader.SubTitle" parent="@android:style/TextAppearance.Holo.Small">

    </style>

    <style name="Orpheus.Button.PanelHeader">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/panel_header_album_art_size</item>
        <item name="android:layout_height">@dimen/panel_header_album_art_size</item>
    </style>

    <style name="Orpheus.MenuButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Orpheus.MenuButton.MediaRouter">
        <item name="mediaRouteButtonStyle">@style/Widget.MediaRouter.Light.MediaRouteButton</item>
        <item name="mediaRouteOffDrawable">@drawable/mr_ic_media_route_off_holo_light</item>
        <item name="mediaRouteConnectingDrawable">@drawable/mr_ic_media_route_connecting_holo_light</item>
        <item name="mediaRouteOnDrawable">@drawable/mr_ic_media_route_on_holo_light</item>
    </style>

    <!--PANEL FOOTER-->

    <style name="Orpheus.Button.Footer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!--MediarouterDialog-->
    <style name="Orpheus.CastDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="mediaRouteButtonStyle">@style/Widget.MediaRouter.Light.MediaRouteButton</item>
        <item name="mediaRouteOffDrawable">@drawable/mr_ic_media_route_off_holo_light</item>
        <item name="mediaRouteConnectingDrawable">@drawable/mr_ic_media_route_connecting_holo_light</item>
        <item name="mediaRouteOnDrawable">@drawable/mr_ic_media_route_on_holo_light</item>
    </style>

</resources>