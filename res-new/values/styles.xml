<resources>

    <style name="Orpheus">
        <!--namespace-->
    </style>

    <style name="DragSortList">
        <!-- Setup dragsort options-->
        <item name="use_default_controller">true</item>
        <item name="drag_handle_id">@id/drag_handle</item>
        <item name="fling_handle_id">@id/drag_handle</item>
        <item name="remove_enabled">true</item>
        <item name="remove_mode">flingRemove</item>
        <item name="drag_enabled">true</item>
        <item name="drag_start_mode">onMove</item>
        <item name="float_background_color">@android:color/transparent</item>
    </style>

    <style name="DragSortSwipeListPreference">
        <item name="use_default_controller">true</item>
        <item name="drag_handle_id">@id/item_handle</item>
        <item name="remove_enabled">true</item>
        <item name="remove_mode">flingRemove</item>
        <item name="drag_start_mode">onMove</item>
        <item name="float_background_color">@android:color/transparent</item>
    </style>

    <style name="Orpheus.Thumbnail">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SingleLineTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="PlaybackControlButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="TextAppearancePlayTime" parent="@android:style/TextAppearance.Holo.Small.Inverse">
        <item name="android:textColor">@color/app_background_light_transparent</item>
        <item name="android:shadowColor">@color/black</item>
        <!--<item name="android:shadowDx">2</item>-->
        <!--<item name="android:shadowDy">2</item>-->
        <item name="android:shadowRadius">3.8</item>
    </style>

    <!--SETTINGS-->
    <style name="SettingsGridBase">
        <item name="android:numColumns">2</item>
    </style>

    <style name="SettingsGrid" parent="SettingsGridBase">
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">8dp</item>
        <item name="android:horizontalSpacing">8dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="GalleryTabs">
        <item name="invertedTabBar">false</item>
    </style>

    <!-- Tiles -->

    <style name="TileOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tibTint">?attr/colorControlNormal</item>
    </style>

    <style name="GridTileDescriptionLight">
        <item name="android:background">@color/primary_material_light</item>
    </style>

    <style name="GridTileDescriptionDark">
        <item name="android:background">@color/primary_dark_material_dark</item>
    </style>

    <style name="GridTileDescriptionTitle" parent="SingleLineTextView">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GridTileDescriptionTitle.Light">
        <!--<item name="android:textAppearance">?android:textAppearanceInverse</item>-->
    </style>

    <style name="GridTileDescriptionTitle.Dark">
    </style>

    <style name="GridTileDescriptionSubTitle" parent="SingleLineTextView">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GridTileDescriptionSubTitle.Light">
        <!--<item name="android:textAppearance">?android:textAppearanceSmallInverse</item>-->
    </style>

    <style name="GridTileDescriptionSubTitle.Dark">

    </style>

    <!-- end tiles -->

    <!-- fabs -->

    <style name="fabDark">
        <item name="fabColor">black</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="fabLight">
        <item name="fabColor">white</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="fabLight.Play">
        <item name="fabColor">accent</item>
        <item name="android:src">@drawable/fab_playpause_black</item>
    </style>

    <style name="fabDark.Play">
        <item name="fabColor">accent</item>
        <item name="android:src">@drawable/fab_playpause_white</item>
    </style>

    <style name="fabLight.Next">
        <item name="android:src">@drawable/ic_skip_next_black_24dp</item>
    </style>

    <style name="fabDark.Next">
        <item name="android:src">@drawable/ic_skip_next_white_24dp</item>
    </style>

    <style name="fabLight.Prev">
        <item name="android:src">@drawable/ic_skip_previous_black_24dp</item>
    </style>

    <style name="fabDark.Prev">
        <item name="android:src">@drawable/ic_skip_previous_white_24dp</item>
    </style>

    <style name="fabLight.Shuffle">
        <item name="android:src">@drawable/fab_shuffle_black</item>
    </style>

    <style name="fabDark.Shuffle">
        <item name="android:src">@drawable/fab_shuffle_white</item>
    </style>

    <style name="fabLight.Repeat">
        <item name="android:src">@drawable/fab_repeat_black</item>
    </style>

    <style name="fabDark.Repeat">
        <item name="android:src">@drawable/fab_repeat_white</item>
    </style>

    <!-- end fabs-->

</resources>