<resources>

    <style name="Orpheus">
        <!--namespace-->
    </style>

    <!-- push down main content area to compensate for ActionBarOverlay-->
    <!-- disabled in layout-land where ActionBarOverlayTopMarginOuter applies-->
    <style name="ActionBarOverlayTopMarginContent">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>

    <style name="CardGridView">
        <item name="android:numColumns">@integer/grid_cols_vertical</item>
    </style>

    <style name="FastScrollGrid" parent="CardGridView">
        <!--fastscroll-->
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
    </style>

    <style name="FastScrollList">
        <!--fastscroll-->
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
    </style>

    <!-- common dragsort options -->
    <style name="DragSortList">
        <!--fastscroll-->
        <!--<item name="android:scrollbarStyle">outsideInset</item>-->
        <!--<item name="android:fastScrollEnabled">true</item>-->
        <!--<item name="android:fastScrollAlwaysVisible">true</item>-->
        <!-- Setup dragsort options-->
        <item name="use_default_controller">true</item>
        <item name="drag_handle_id">@id/card_drag_element</item>
        <item name="remove_enabled">true</item>
        <item name="remove_mode">flingRemove</item>
        <item name="drag_start_mode">onMove</item>
        <item name="fling_handle_id">@id/card_drag_element</item>
        <item name="float_background_color">@android:color/transparent</item>
        <!-- since we arent using the CardListView we need to disable dividers ourselves-->
        <item name="android:dividerHeight">0dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:divider">@null</item>

    </style>

    <style name="DragSortSwipeListPreference">
        <item name="use_default_controller">true</item>
        <item name="drag_handle_id">@id/item_handle</item>
        <item name="remove_enabled">true</item>
        <item name="remove_mode">flingRemove</item>
        <item name="drag_start_mode">onMove</item>
        <item name="float_background_color">@android:color/transparent</item>
    </style>

    <style name="Orpheus.Thumbnail">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- List item text appearance -->

    <style name="TextAppearanceListBase" parent="@android:style/TextAppearance.Holo">
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="TextAppearanceListSecondaryBase" parent="@android:style/TextAppearance.Holo.Small">

    </style>

    <style name="TextAppearanceList.Title" parent="TextAppearanceListBase">

    </style>

    <style name="TextAppearanceList.SubTitle" parent="TextAppearanceListSecondaryBase">

    </style>

    <!-- grid item text appearance base -->

    <style name="TextAppearanceGridBase" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearanceGridTitleBase" parent="@android:style/TextAppearance.Holo">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Grid item text appearance -->

    <style name="TextAppearanceGrid" parent="TextAppearanceGridBase">

    </style>

    <style name="TextAppearanceGridTitle" parent="TextAppearanceGridTitleBase">

    </style>

    <!-- text views for lists and grids -->

    <style name="SingleLineTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!--PANEL HEADER-->

    <style name="TextAppearancePanelHeader.Title" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearancePanelHeader.SubTitle" parent="@android:style/TextAppearance.Holo.Small">

    </style>

    <style name="Orpheus.MenuButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Orpheus.MenuButton.MediaRouter">
        <item name="mediaRouteButtonStyle">@style/Widget.MediaRouter.Light.MediaRouteButton</item>
        <item name="mediaRouteOffDrawable">@drawable/mr_ic_media_route_off_holo_light</item>
        <item name="mediaRouteConnectingDrawable">@drawable/mr_ic_media_route_connecting_holo_light</item>
        <item name="mediaRouteOnDrawable">@drawable/mr_ic_media_route_on_holo_light</item>
    </style>

    <!--PANEL FOOTER-->

    <style name="PlaybackControlButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="TextAppearancePlayTime" parent="@android:style/TextAppearance.Holo.Small.Inverse">
        <item name="android:textColor">@color/app_background_light_transparent</item>
        <item name="android:shadowColor">@color/black</item>
        <!--<item name="android:shadowDx">2</item>-->
        <!--<item name="android:shadowDy">2</item>-->
        <item name="android:shadowRadius">3.8</item>
    </style>


</resources>