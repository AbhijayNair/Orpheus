<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowView">
        <attr name="shadowPosition">
            <enum name="above" value="0" />
            <enum name="below" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="NowPlaying">
        <attr name="nowPlayingBackground" format="reference"/>
    </declare-styleable>
    <declare-styleable name="SlidingTabLayout">
        <attr name="lightStyle" format="boolean"/>
    </declare-styleable>
    <!--FloatingACtionButton-->
    <declare-styleable name="FloatingActionButton">
        <attr name="fabColorPressed" format="color"/>
        <attr name="fabColorNormal" format="color"/>
        <attr name="fabIcon" format="reference"/>
        <attr name="fabSize" format="enum">
            <enum name="normal" value="0"/>
            <enum name="mini" value="1"/>
        </attr>
    </declare-styleable>
</resources>