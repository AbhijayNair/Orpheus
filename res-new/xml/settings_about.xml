<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/settings_about_about_category">

        <Preference
            android:key="pref_author"
            android:title="@string/settings_about_author_title"
            android:summary="@string/opensilk_org_url">
            <intent android:action="android.intent.action.VIEW"
                android:data="@string/opensilk_org_url"/>
            </Preference>

        <Preference
            android:key="pref_version"
            android:title="@string/settings_about_version_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_about_legal_category">

        <Preference
            android:key="pref_licenses"
            android:title="@string/settings_about_licenses_title"/>

        <Preference
            android:key="pref_thanks"
            android:title="@string/settings_special_thanks"/>
    </PreferenceCategory>

</PreferenceScreen>