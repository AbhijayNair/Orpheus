<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/settings_home_category">

        <org.opensilk.music.ui.settings.DragSortSwipeListPreference
            android:key="pref_home_pages"
            android:title="@string/settings_pick_home_pages"
            android:summary="@string/settings_pick_home_pages_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_theme_category">

        <CheckBoxPreference
            android:key="pref_dark_theme"
            android:title="@string/settings_dark_theme"
            android:defaultValue="false"/>

        <org.opensilk.music.ui.settings.ThemeListPreference
            android:key="pref_theme"
            android:title="@string/settings_pick_theme"
            android:entries="@array/theme_list_names"
            android:entryValues="@array/theme_list_values"/>

    </PreferenceCategory>

</PreferenceScreen>