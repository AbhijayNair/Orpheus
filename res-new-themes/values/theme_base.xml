<resources>

    <!--Common styles for light theme-->

    <style name="Theme.LightBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- kitkat style selectables -->
        <!--<item name="android:selectableItemBackground">@drawable/item_background_holo_light</item>-->
        <item name="android:popupMenuStyle">@style/PopupMenu.Light</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Light</item>
        <!-- ActionBar overrides -->
        <item name="android:actionBarStyle">@style/ActionBar.Light</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.CommonBase</item>
        <!--<item name="android:actionBarItemBackground">@drawable/item_background_holo_dark</item> &lt;!&ndash;dark on purpose&ndash;&gt;-->
        <!--<item name="android:actionDropDownStyle">@style/DropDownNav.RepheusDark</item>-->
        <!-- Disable shadow on action bar-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.LightBase.Widget</item>
    </style>

    <style name="Theme.Light" parent="Theme.LightBase">
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="Theme.Light.Panel">
        <!--needed to allow sliding up pane-->
        <item name="windowActionBarOverlay">true</item>
        <!-- Panel background -->
        <item name="nowPlayingBackground">@drawable/drop_shadow_light</item>
    </style>

    <style name="Theme.Dialog.LightBase" parent="Theme.LightBase">
        <item name="isDialog">false</item>
    </style>

    <style name="Theme.Dialog.Light" parent="Theme.Dialog.LightBase">

    </style>

    <style name="Theme.Dialog.Light.Panel">
        <!--needed to allow sliding up pane-->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!--Common styles for dark theme-->

    <style name="Theme.DarkBase" parent="Theme.AppCompat">
        <!-- kitkat style selectables -->
        <!--<item name="android:selectableItemBackground">@drawable/item_background_holo_dark</item>-->
        <item name="android:popupMenuStyle">@style/PopupMenu.Dark</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Dark</item>
        <!-- ActionBar overrides -->
        <item name="android:actionBarStyle">@style/ActionBar.Dark</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.CommonBase</item>
        <!--<item name="android:actionBarItemBackground">@drawable/item_background_holo_dark</item>-->
        <!--<item name="android:actionDropDownStyle">@style/DropDownNav.RepheusDark</item>-->
        <!-- Disable shadow on action bar-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Dark" parent="Theme.DarkBase">
        <item name="colorPrimary">@android:color/black</item>
    </style>

    <style name="Theme.Dark.Panel">
        <!--needed to allow sliding up pane-->
        <item name="windowActionBarOverlay">true</item>
        <!-- Panel background -->
        <item name="nowPlayingBackground">@drawable/drop_shadow_dark</item>
    </style>

    <style name="Theme.Dialog.DarkBase" parent="Theme.DarkBase">
        <item name="isDialog">false</item>
    </style>

    <style name="Theme.Dialog.Dark" parent="Theme.Dialog.DarkBase">

    </style>

    <style name="Theme.Dialog.Dark.Panel">
        <!--needed to allow sliding up pane-->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- End common themes -->

    <!-- Use custom overflow icon -->
    <style name="ActionButton.Overflow.CommonBase" parent="Widget.AppCompat.Base.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_holo_dark</item>
    </style>

    <!-- action bar styles -->
    <style name="ActionBar.Light" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@null</item>
        <item name="android:backgroundStacked">?colorPrimary</item>
        <item name="android:backgroundSplit">?colorPrimary</item>
        <item name="android:icon">@drawable/blank</item>
        <item name="icon">@drawable/blank</item>
        <item name="android:title">@string/empty</item>
        <item name="title">@string/empty</item>
    </style>

    <style name="ActionBar.Dark" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@null</item>
        <item name="android:backgroundStacked">?colorPrimary</item>
        <item name="android:backgroundSplit">?colorPrimary</item>
        <item name="android:icon">@drawable/blank</item>
        <item name="icon">@drawable/blank</item>
        <item name="android:title">@null</item>
        <item name="title">@null</item>
    </style>

    <!-- PopupMenu styles -->
    <style name="PopupMenu.Light" parent="Widget.AppCompat.Light.PopupMenu">
        <!--<item name="android:popupBackground">@drawable/menu_dropdown_panel_orpheus</item>-->
    </style>

    <style name="PopupMenu.Dark" parent="Widget.AppCompat.PopupMenu">

    </style>

    <!-- Dropdown list styles -->
    <style name="DropDownListView.Light" parent="Widget.AppCompat.Light.ListView.DropDown">
        <!--<item name="android:listSelector">@drawable/item_background_holo_light</item>-->
    </style>

    <style name="DropDownListView.Dark" parent="Widget.AppCompat.ListView.DropDown">
        <!--<item name="android:listSelector">@drawable/item_background_holo_dark</item>-->
    </style>

    <!-- Drop down nav styles -->
    <style name="DropDownNav.Light" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <!--<item name="android:background">@drawable/spinner_background_ab_blupheus</item>-->
        <!--<item name="android:popupBackground">@drawable/menu_dropdown_panel_orpheus</item>-->
        <!--<item name="android:dropDownSelector">@drawable/selectable_background_blupheus</item>-->
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.LightBase.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Light</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Light</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:listDivider">@drawable/list_divider_holo_light</item>
    </style>

</resources>