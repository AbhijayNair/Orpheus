<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrew.apollo">

    <application>
        <!-- Local Content Provider-->
        <provider
            android:authorities="org.opensilk.music.provider"
            android:name="com.andrew.apollo.provider.MusicProvider"
            android:multiprocess="true"
            android:exported="false"/>

        <provider
            android:name="org.opensilk.music.artwork.ArtworkProvider"
            android:authorities="org.opensilk.music.artwork.provider"
            android:enabled="true"
            android:exported="false"
            android:grantUriPermissions="true"/>

        <!-- widget -->
        <receiver
            android:name="org.opensilk.music.appwidgets.MusicWidget"
            android:label="@string/widget_label" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="org.opensilk.music.PLAY_STATE_CHANGED" />
                <action android:name="org.opensilk.music.META_CHANGED" />
                <action android:name="org.opensilk.music.REPEATE_CHANGED" />
                <action android:name="org.opensilk.music.SHUFFLE_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/music_widget" />
        </receiver>

    </application>

</manifest>